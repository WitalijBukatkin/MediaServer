<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<View xmlns:fx="http://javafx.com/fxml/1" fx:id="register" xmlns="http://javafx.com/javafx/9.0.4"
      fx:controller="ru.mediaserver.clients.msmobile.presentation.auth.register.RegisterPresenter">
    <center>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="login" prefHeight="44.0" prefWidth="500.0" promptText="LOGIN" text="vitalijbukatkin">
                    <font>
                        <Font size="30.0"/>
                    </font>
                </TextField>
                <PasswordField fx:id="password" prefHeight="40.0" prefWidth="500.0" promptText="PASSWORD">
                    <font>
                        <Font size="30.0"/>
                    </font>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </PasswordField>
                <PasswordField fx:id="passwordRepeat" layoutX="40.0" layoutY="154.0" prefHeight="40.0" prefWidth="500.0"
                               promptText="PASSWORD REPEAT">
                    <font>
                        <Font size="30.0"/>
                    </font>
                </PasswordField>
                <Button onAction="#cancel" prefHeight="50.0" prefWidth="500.0" text="CANCEL">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="80.0"/>
            </padding>
        </VBox>
    </center>
</View>
